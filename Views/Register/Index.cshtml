@model IEnumerable<TechTest.Models.LoginModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Registrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDisDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserModDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.UserStatus == true)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserDisDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserModDate)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.UserId">Edit</a>
                        <a asp-action="Details" class="btn btn-light" asp-route-id="@item.UserId">Details</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.UserId">Delete</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
