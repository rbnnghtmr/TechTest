@model IEnumerable<TechTest.Models.UserModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Registrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonSex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonDisDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonModDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            @if (item.PersonStatus == true)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonAge)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonSex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonDisDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonModDate)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.PersonId">Edit</a>
                        <a asp-action="Details" class="btn btn-light" asp-route-id="@item.PersonId">Details</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.PersonId">Delete</a>
                    </td>
                </tr>
            }
        } 
       
    </tbody>
</table>
